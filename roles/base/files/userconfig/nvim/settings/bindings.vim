" leaders
let mapleader = ","
let maplocalleader = ","

" split navigation
nnoremap <leader>wh <C-w>h
nnoremap <leader>wj <C-w>j
nnoremap <leader>wk <C-w>k
nnoremap <leader>wl <C-w>l

" ranger
nnoremap <leader>f :Ranger<CR>

" search
nnoremap <leader>s /

" shortcuts
nnoremap <leader>qq :q<CR>
nnoremap <leader>qw :wq<CR>
