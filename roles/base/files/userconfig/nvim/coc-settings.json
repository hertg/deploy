{
	"languageserver": {
		"go": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"trace.server": "verbose",
			"filetypes": [
				"go"
			]
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			]
		},
		"rust": {
			"command": "rust-analyzer",
			"filetypes": [
				"rust"
			],
			"rootPatterns": [
				"Cargo.toml"
			]
		},
		"sql": {
			"command": "sql-language-server",
			"args": [
				"up",
				"--method",
				"stdio"
			],
			"filetypes": [
				"sql",
				"mysql"
			]
		}
	}
}
