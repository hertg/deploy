[colors]
;background = ${xrdb:KEY:fallback value}
;background = #AARRGGBB (AA = Alpha)
background = #440A0A0A
foreground = #ffffff
background-alt = #DD2A2A2A
foreground-alt = #FFFFFF
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

color-1 = #d3f8e2
color-2 = #e4c1f9
color-3 = #f694c1
color-4 = #ede7b1
color-5 = #a9def9

color-1-contrast = #000000
color-2-contrast = #000000
color-3-contrast = #000000
color-4-contrast = #000000
color-5-contrast = #000000

[bar/mainbar0]
inherit = bar/barbase
modules-center = workspace0
[module/workspace0]
type = custom/script
exec = leftwm-state -w 0 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar1]
inherit = bar/barbase
modules-center = workspace1
[module/workspace1]
type = custom/script
exec = leftwm-state -w 1 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar2]
inherit = bar/barbase
modules-center = workspace2
[module/workspace2]
type = custom/script
exec = leftwm-state -w 2 -t $SCRIPTPATH/template.liquid
tail = true

[bar/mainbar3]
inherit = bar/barbase
modules-center = workspace3
[module/workspace3]
type = custom/script
exec = leftwm-state -w 3 -t $SCRIPTPATH/template.liquid
tail = true

[bar/barbase]
separator = |
width = ${env:width}
;width = 100%:-40
;offset-x = ${env:offsetx}
;offset-x = 20
;offset-y = 20
monitor = ${env:monitor}
;offset-y = ${env:y}
height = 38
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #f00
border-size = 0
border-color = ${colors.background}
module-margin-left = 2
module-margin-right = 2
font-0 = DejaVu Sans:size=12;3
font-1 = monospace:size=13:0
font-2 = DejaVu Sans:pixelsize=14;1
modules-left = powermenu date
;modules-right = filesystem xbacklight pulseaudio xkeyboard memory cpu wlan eth battery temperature date powermenu
;modules-right = xbacklight pulseaudio memory cpu wlan eth battery powermenu
modules-right = pulseaudio
tray-position = right
tray-padding = 4
tray-maxsize = 20
cursor-click = pointer
cursor-scroll = ns-resize

[module/base]
;format-background = ${colors.background-alt}
;format-foreground = ${colors.foreground-alt}
format-padding = 1

;[module/ewmh]
;type = internal/xworkspaces
;label-active = " %icon% %name%  "
;label-active-foreground = ${colors.foreground-alt}
;label-active-background = ${colors.background-alt}
;label-active-underline = ${colors.primary}
;label-occupied = " %icon% %name%  "
;label-occupied-underline = ${colors.secondary}
;label-urgent = " %icon% %name%  "
;label-urgent-foreground = ${colors.foreground}
;label-urgent-background = ${colors.background}
;label-urgent-underline  = ${colors.alert}
;label-empty = " %icon% %name%  "
;label-empty-foreground = ${colors.foreground}

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/mpd]
inherit = module/base
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 25
label-song-ellipsis = true

[module/xbacklight]
inherit = module/base
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #fff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight

[module/date]
inherit = module/base
type = internal/date
date = %%{F#99}%d. %b. %Y%%{F-}  %%{F#fff}%H:%M%{F#777}:%S%{F-}
;date-alt = %%{F#fff}%A, %B %d, %Y  %%{F#fff}%I:%M:%{F#666}%%{F#fba922}%S%%{F-} %p

[module/pulseaudio]
inherit = module/base
type = internal/pulseaudio
format-volume = <label-volume>
label-volume = Volume: %percentage%%
;label-volume-foreground = ${colors.color-4-contrast}
;label-volume-background = ${colors.color-4}
;label-volume-padding = 4

label-muted = Volume: muted
label-muted-foreground = #f66

[module/battery]
inherit = module/base
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-prefix = "BAT: "

format-charging = <label-charging>
format-charging-background = ${colors.color-5}
format-charging-foreground = ${colors.color-5-contrast}

format-discharging = <label-discharging>
format-discharging-background = ${colors.background-alt}
format-discharging-foreground = ${colors.foreground-alt}

;format-full-prefix = " "
;format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-underline = ${self.format-charging-underline}

;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-foreground = ${colors.foreground-alt}
;
;animation-charging-0 = 
;animation-charging-1 = 
;animation-charging-2 = 
;animation-charging-foreground = ${colors.foreground-alt}
;animation-charging-framerate = 750
;
;animation-discharging-0 = 
;animation-discharging-1 = 
;animation-discharging-2 = 
;animation-discharging-foreground = ${colors.foreground-alt}
;animation-discharging-framerate = 750

[module/powermenu]
type = custom/menu
inherit = module/base
expand-right = true

format-spacing = 1
;format-background = ${colors.color-3}
;format-foreground = ${colors.color-3-contrast}
format-padding = 6

label-open = "襤"
;label-open-foreground = ${colors.foreground}
label-close = cancel
;label-close-foreground = ${colors.foreground}
label-separator = |
;label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = shutdown
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = systemctl reboot

menu-2-0 = shutdown
menu-2-0-exec = systemctl poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

;[global/wm]
;margin-top = 5
;margin-bottom = 5

; vim:ft=dosini
